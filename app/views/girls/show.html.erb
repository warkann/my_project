<% fields = { 'Город': :city, 'Рост': :height, 'Размер груди': :boobs_size, 'Телосложение': :body_type,
              'Возраст': :age, 'Телефон': :phone, 'Территориально': :area, 'Интересы': :interests } %>

<% fields.each_pair do |key, value| %>
    <p><%= "#{key}: #{@girl.public_send(value)}" %></p>
<% end %>

<% if @girl.id == current_user.id %>
  <%= link_to 'Редактировать анкету', edit_girl_path %>
<% end %>